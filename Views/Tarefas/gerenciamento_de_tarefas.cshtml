@model IEnumerable<Gerenciamento_de_Tarefas.Models.Tarefa> 




@{
    ViewData["Title"] = "Gerenciamento de tarefas";
}

<h1>Gerenciamento de tarefas</h1>

<br>
<div class="card text-center">
    <div class="card-body">
        <h5 class="card-title"></h5>
        <p class="card-text"></p>
        <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a asp-action="criartarefa" class="btn btn-primary" >Cadastrar </a>
        </div>
    </div>
    </div>
</div>
    
    <tbody>
        
       @if(Model != null){
         @foreach(var item in Model)
        {

            <br>
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(model => item.Titulo)</h5>
                        <p class="card-text">@Html.DisplayFor(model => item.Descricao)</p>
                        <p class="card-text">@Html.DisplayFor(model => item.Id)</p>
                        <p class="card-text">@Html.DisplayFor(model => item.UsuarioId)</p>
                        <br>
                        @Html.ActionLink("Detalhes", "Vertarefa", new { id = item.Id }, new { @class = "btn btn-primary" })
                    </div>
                </div>
        }
       }
       else
       {
        <p>No data available</p>
       }
    </tbody>


